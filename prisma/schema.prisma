// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @default(uuid()) @db.Uuid
  createdAt        DateTime      @default(now())
  email            String        @db.Char(50)
  givenName        String        @db.Char(50)
  familyName       String        @db.Char(50)
  phoneNumber      String        @db.Char(20)
  dreamDescription String        @db.Char(300)
  linkedinId       String?       @unique(sort: Desc) @db.Char(30)
  googleId         String?       @unique(sort: Desc) @db.Char(30)
  facebookId       String?       @unique(sort: Desc) @db.Char(30)
  UserPrompts      UserPrompts[]

  @@index([linkedinId], type: Hash)
  @@index([googleId], type: Hash)
  @@index([facebookId], type: Hash)
  @@index([email], type: Hash)
}

model UserPrompts {
  id        String   @id @default(uuid()) @db.Uuid
  createdAt DateTime @default(now())
  prompt    String   @db.Char(200)
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.Uuid
}
