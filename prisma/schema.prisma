// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String        @id @db.VarChar(70)
  createdAt        DateTime      @default(now())
  email            String        @db.VarChar(50)
  givenName        String        @db.VarChar(50)
  familyName       String        @db.VarChar(50)
  phoneNumber      String        @db.VarChar(20)
  dreamDescription String        @db.VarChar(300)
  dreamJob         String        @db.VarChar(300)
  fearInLife       String        @db.VarChar(300)
  professionSkills String        @db.VarChar(300)
  UserPrompts      UserPrompts[]

  @@index([email], type: Hash)
}

model UserPrompts {
  id              String   @id @default(uuid()) @db.Uuid
  createdAt       DateTime @default(now())
  prompt          String   @db.VarChar(4000)
  responseMessage String   @db.VarChar(4000)
  user            User     @relation(fields: [userId], references: [id])
  userId          String   @db.VarChar(70)
  sessionId       String   @db.VarChar(50)

  @@index([sessionId], type: Hash)
  @@index([createdAt], type: BTree)
}
